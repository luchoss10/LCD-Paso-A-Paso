#include <16F887.h>
#use delay (crystal=8000000)

   
void main(){

   set_tris_c(0x00);
   output_c(0x00);
   //--------------------------------------------------------------------------
   output_c(0x02);
   delay_ms(100);
   
   output_c(0x22);
   delay_ms(100);
   //--------------------------------------------------------------------------
   output_c(0x00);
   delay_ms(100);
   
   output_c(0x20);
   delay_ms(100);
   //--------------------------------------------------------------------------
   output_c(0x0F);
   delay_ms(100);
   
   output_c(0x2F);
   delay_ms(100);                                                             
   //--------------------------------------------------------------------------
   //Terrmina inicializacion
   //Escribe U
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   //--------------------------------------------------------------------------
   //Escribe T
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   //--------------------------------------------------------------------------
   //Escribe P
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   
   output_c();
   delay_ms(100);
   //--------------------------------------------------------------------------
}
