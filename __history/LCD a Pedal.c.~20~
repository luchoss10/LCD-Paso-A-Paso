#include <16F887.h>
#use delay (crystal=8000000)

void pulso(){
   //output_d(0x02);
   output_high(pin_D1);
   delay_ms(500);   
   
   //output_d(0x00);
   output_low(pin_D1);
   delay_ms(500);
}

void escribe(){
   output_d(0x03);
   delay_ms(100);   
   
   output_d(0x01);
   delay_ms(100);   
}
  
void main(){

   set_tris_c(0x00);
   set_tris_d(0x00);
   output_c(0x00);
   output_d(0x00);
   //--------------------------------------------------------------------------
   output_c(0x02);
   delay_ms(100);
   
   pulso();
   //--------------------------------------------------------------------------

   output_c(0x00);
   delay_ms(100);
   
   pulso();
   //--------------------------------------------------------------------------
   output_c(0x0F);
   delay_ms(100);
   
   pulso();
   //--------------------------------------------------------------------------
   //Terrmina inicializacion
   //Escribe U
   output_c(0X05);
   delay_ms(100);
   
   escribe();
   
   output_c(0X05);
   delay_ms(100);
   
   escribe();
   //--------------------------------------------------------------------------
   //Escribe T
   output_c(0X05);
   delay_ms(100);
   
   escribe();
   
   output_c(0X04);
   delay_ms(100);
   
   escribe();
   
   //--------------------------------------------------------------------------
   //Escribe P
   output_c(0X05);
   delay_ms(100);
   
   escribe();
   
   output_c(0X00);
   delay_ms(100);
   
   escribe();
//!   //--------------------------------------------------------------------------
}
