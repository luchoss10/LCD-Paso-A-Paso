#include <16f887.h>                   
#use delay (clock=8000000)           

#INCLUDE <lcd.c> //Libreria LCD

void main()
{
   set_tris_D(0);//Por defecto es el puerto D por lo tanto lo establecemos como salida
   lcd_init();                            //Inicializamos LCD
   lcd_putc("Hola Mundo UTP");                //"Hola Mundo"
}
